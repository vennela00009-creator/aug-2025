import java.util.Scanner; // Import the Scanner class to read user input

public class ArrayExample {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in); // Create a Scanner object

        // Declare an array of integers
        int[] numbers;

        System.out.print("Enter the size of the array: ");
        int size = scanner.nextInt(); // Read the array size from the user

        // Initialize the array with the specified size
        numbers = new int[size];

        System.out.println("Enter " + size + " integer elements:");

        // Loop to get array elements from the user
        for (int i = 0; i < size; i++) {
            System.out.print("Enter element " + (i + 1) + ": ");
            numbers[i] = scanner.nextInt(); // Store user input in the array
        }

        System.out.println("\nElements in the array are:");

        // Loop to print the elements of the array using a traditional for loop
        for (int i = 0; i < numbers.length; i++) {
            System.out.println("Element at index " + i + ": " + numbers[i]);
        }

        System.out.println("\nElements in the array (using enhanced for loop):");

        // Loop to print the elements of the array using an enhanced for loop (for-each loop)
        for (int number : numbers) {
            System.out.print(number + " ");
        }
        System.out.println(); // New line for formatting

        // Example: Finding the sum of array elements
        int sum = 0;
        for (int number : numbers) {
            sum += number;
        }
        System.out.println("\nSum of array elements: " + sum);

        scanner.close(); // Close the scanner to release resources
    }
}
